{
  "config": {
    "target": "http://localhost:3000",
    "phases": [
      {
        "duration": 3,
        "arrivalRate": 1
      },
      {
        "duration": 5,
        "arrivalRate": 10
      }
    ]
    ,
    "processor" : "./load-test-create-user.js"
  },
  "scenarios": [
    {
      "name": "Create Users",
      "flow": [
        {
          "function": "create"
        },
        {
          "post": {
            "url": "/api/v1/signup",
            "json": {
              "username": "{{ username }}",
              "email": "{{ email }}",
              "password": "{{ password }}"
              },
            "capture": {
              "json": "$.token",
              "as": "token"
            }
          }
        }
        ,
        {
          "post": {
            "url": "/api/v1/gallery",
            "json": {
            "name": "{{ name}}",
            "description": "{{ description }}",
            "Authorization": "Bearer {{ token }}"
            }
          }
        }
      ]
    }
  ]
}
